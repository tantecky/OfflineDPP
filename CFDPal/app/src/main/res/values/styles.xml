<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<style name="AppTheme" parent="Theme.AppCompat">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogActionButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="GreenButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/green</item>
    </style>

    <style name="RedButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/red</item>
    </style>

    <style name="OrangeButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/orange</item>
    </style>

    <style name="YellowButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/yellow</item>
    </style>

</resources>
